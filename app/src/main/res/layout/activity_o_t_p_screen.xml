<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".auth.OTPScreen"
    android:orientation="vertical"
    android:padding="19dp">

    <ImageView
        android:id="@+id/imgBack"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_multimedia_option"
        style="@style/BackarrowTheme"
        />


    <ImageView
        android:id="@+id/imgLogo"
        android:layout_marginTop="17dp"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_weight="1"
        android:src="@drawable/logo"
        style="@style/BackarrowTheme"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">


    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Verification Code"
        android:fontFamily="@font/raleway"
        android:textSize="21sp"
        android:textColor="@color/colorAccent"
        android:gravity="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please type the verification code sent to "
        android:fontFamily="@font/raleway"
        android:textSize="19sp"
        android:textColor="@color/cardview_dark_background"
        android:gravity="center"/>

    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:id="@+id/layout_otp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"

        android:orientation="horizontal">

    <EditText
        android:id="@+id/editTextone"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:inputType="numberPassword"
        android:maxLength="1"
        android:nextFocusRight="@+id/editText_two">


        <requestFocus />

    </EditText>


        <EditText

            android:id="@+id/editTexttwo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:inputType="numberPassword"
            android:maxLength="1"/>


        <EditText

            android:id="@+id/editTextthree"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:inputType="numberPassword"
            android:maxLength="1"/>


        <EditText

            android:id="@+id/editTextfour"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:inputType="numberPassword"
            android:maxLength="1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:contentPadding="10dp"
        app:cardBackgroundColor="@color/colorAccent"
        app:cardElevation="10dp"
        app:cardMaxElevation="10dp"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="20dp">
        <TextView
            android:id="@+id/txtConfirmOTP"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Confirm OTP"
            android:fontFamily="@font/raleway"
            android:paddingStart="23dp"
            android:paddingEnd="23dp"
            android:textSize="19sp"
            android:paddingTop="7dp"
            android:textColor="@color/white"
            android:paddingBottom="7dp"/>

    </androidx.cardview.widget.CardView>

    <TextView
            android:id="@+id/txtResendOtp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Resend Otp"
        android:fontFamily="@font/raleway"
        android:paddingStart="23dp"
        android:paddingEnd="23dp"
        android:textSize="19sp"

        android:paddingTop="7dp"
        android:textColor="@color/text"
        android:gravity="center"
        android:paddingBottom="7dp"/>

    </LinearLayout>


   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_weight="1"/>

</LinearLayout>